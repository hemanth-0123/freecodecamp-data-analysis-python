import pandas as pd

def calculate_demographic_data():
    # load the data
    df = pd.read_csv("adult.data.csv")

    # 1. How many people of each race
    race_count = df['race'].value_counts()

    # 2. Average age of men
    avg_age_men = round(df[df['sex'] == 'Male']['age'].mean(), 1)

    # 3. % with Bachelors degree
    bachelors = round((df['education'].value_counts()['Bachelors'] / df.shape[0]) * 100, 1)

    # 4. % with advanced education and >50K income
    adv_edu = ['Bachelors', 'Masters', 'Doctorate']
    higher_edu = df[df['education'].isin(adv_edu)]
    lower_edu = df[~df['education'].isin(adv_edu)]

    higher_edu_rich = round((higher_edu[higher_edu['salary'] == '>50K'].shape[0] / higher_edu.shape[0]) * 100, 1)
    lower_edu_rich = round((lower_edu[lower_edu['salary'] == '>50K'].shape[0] / lower_edu.shape[0]) * 100, 1)

    # 5. Min hours per week
    min_hours = df['hours-per-week'].min()

    # 6. % of people working min hours and earning >50K
    min_workers = df[df['hours-per-week'] == min_hours]
    rich_min_workers = round((min_workers[min_workers['salary'] == '>50K'].shape[0] / min_workers.shape[0]) * 100, 1)

    # 7. Country with highest % of >50K
    country_rich = (df[df['salary'] == '>50K']['native-country'].value_counts() / df['native-country'].value_counts()) * 100
    country_rich = country_rich.dropna()
    top_country = country_rich.idxmax()
    top_country_percent = round(country_rich.max(), 1)

    # 8. Most popular occupation for rich people in India
    india_rich = df[(df['native-country'] == 'India') & (df['salary'] == '>50K')]
    top_job_india = india_rich['occupation'].value_counts().idxmax()

    # printing results so I can see in Colab
    print("\n--- RESULTS ---")
    print("Race count:\n", race_count)
    print("Average age of men:", avg_age_men)
    print("Percentage with Bachelors:", bachelors)
    print("Higher education rich:", higher_edu_rich)
    print("Lower education rich:", lower_edu_rich)
    print("Min work hours:", min_hours)
    print("Rich percentage among min workers:", rich_min_workers)
    print("Country with highest % rich:", top_country, "(", top_country_percent, "% )")
    print("Top occupation in India among >50K:", top_job_india)

    # returning (needed for FCC tests, ignore if only using in Colab)
    return {
        'race_count': race_count,
        'average_age_men': avg_age_men,
        'percentage_bachelors': bachelors,
        'higher_education_rich': higher_edu_rich,
        'lower_education_rich': lower_edu_rich,
        'min_work_hours': min_hours,
        'rich_percentage_min_workers': rich_min_workers,
        'top_country': top_country,
        'top_country_percent': top_country_percent,
        'top_job_india': top_job_india
    }


# Call the function so results actually show up
calculate_demographic_data()
